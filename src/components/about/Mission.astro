---
interface Props {
	data: {
		title: string
		description: string[]
	}
}

const { data } = Astro.props
---

<section>
	<div class="wrapper">
		<h2>{data.title}</h2>
		{data.description.map((paragraph) => <p>{paragraph}</p>)}
	</div>
</section>

<style lang="scss">
	section {
		margin-top: 90px;
		text-align: center;

		> div {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			height: 100%;
		}

		h2 {
			font-size: 2rem;
			font-weight: 400;
			line-height: 1.6;
			text-transform: uppercase;
		}

		p {
			font-size: 1.25rem;
			line-height: 1.33;
			font-weight: 500;
			max-width: 900px;

			margin-top: 24px;
		}
	}
</style>
