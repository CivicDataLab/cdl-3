---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'
---

<header class="wrapper">
	<h1>
		{SITE_TITLE}
	</h1>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Work</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="/resources">Resources</HeaderLink>
		<HeaderLink href="/events">Events</HeaderLink>
		<HeaderLink href="/collaborate">Collaborate</HeaderLink>
	</nav>

	<style>
		header {
			display: flex;
			align-items: center;
			justify-content: space-between;
			flex-wrap: wrap;
			z-index: 100;
			position: relative;

			padding: 32px 0;
		}

		nav {
			display: flex;
			align-items: center;
			gap: 32px;
			flex-wrap: wrap;
			padding: 8px;
		}
	</style>
</header>
