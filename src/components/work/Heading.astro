---
interface Props {
	data: {
		title: string
		description: string
	}
}

const { data } = Astro.props
---

<section>
	<div class="wrapper">
		<div>
			<h1>{data.title}</h1>
			<p>
				{data.description}
			</p>
		</div>
		<div class="social">
			<a href="#">
				<img src="/icons/linkedin.svg" alt="" width={34} height={34} />
				<span class="sr-only">LinkedIn</span>
			</a>
			<a href="#">
				<img src="/icons/twitter.svg" alt="" width={34} height={34} />
				<span class="sr-only">LinkedIn</span>
			</a>
			<a href="#">
				<img src="/icons/github.svg" alt="" width={34} height={34} />
				<span class="sr-only">LinkedIn</span>
			</a>
		</div>
	</div>
</section>

<style lang="scss">
	section {
		margin-top: var(--space-16);
		max-width: 1216px;
		margin-inline: auto;
	}

	.wrapper {
		display: flex;
		justify-content: space-between;
		gap: var(--space-5);
		align-items: center;
		flex-wrap: wrap;
	}

	h1 {
		font-weight: 800;
		font-size: 2rem;
		text-transform: uppercase;
		color: var(--text-on-background);
		background: url('/dialog.png') no-repeat;
		background-size: contain;
		padding-top: 42px;
		padding-left: 68px;
		height: 168px;

		@media (min-width: 1200px) {
			margin-left: calc(-1 * var(--space-16));
		}
	}

	p {
		font-size: 1.25rem;
		line-height: 1.33;
		font-weight: 500;
		max-width: 590px;
	}

	.social {
		margin-top: var(--space-3);
		display: flex;
		flex-direction: column;
		gap: var(--space-2);
		a {
			text-decoration: none;
		}

		img {
			filter: invert(1);
		}

		@media (max-width: 680px) {
			flex-direction: row;
		}
	}
</style>
