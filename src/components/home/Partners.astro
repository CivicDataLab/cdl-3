---
import Icon from '../icon.astro'
import Carousel from './Carousel.astro'

interface Props {
	data: {
		title: string
		carousel: {
			image: string
			url: string
		}[]
	}
}

const { data } = Astro.props
---

<div class="container">
	<div class="bg"></div>
	<div class="wrapper">
		<h2>{data.title}</h2>

		<div class="carousel">
			<Carousel />
		</div>
	</div>
</div>

<style lang="scss">
	.container {
		padding-block: 122px 268px;
		position: relative;
	}

	.bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: var(--bg-light-mud);

		opacity: 0.7;
		background: url('/bg-texture.png'),
			var(--bg-light-mud) -267.603px -209.293px / 241.777% 341.607% no-repeat;
		z-index: -1;
	}

	h2 {
		text-transform: uppercase;
		font-size: 2rem;
		font-weight: 800;
		text-align: center;
		color: var(--blue-dark);
	}

	.carousel {
		margin-top: 108px;

		img {
			object-fit: contain;
		}
	}
</style>
