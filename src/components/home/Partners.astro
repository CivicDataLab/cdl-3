---
import Icon from '../icon.astro'

interface Props {
	data: {
		title: string
		carousel: {
			image: string
			url: string
		}[]
	}
}

const { data } = Astro.props
---

<div class="container">
	<div class="bg"></div>
	<div class="wrapper">
		<h2>{data.title}</h2>
		<div class="carousel">
			<button aria-label="previous item">
				<Icon icon="arrow-left" />
			</button>
			<div class="items">
				<img src="/partners.png" alt="partners" width={1203} height={183} />
			</div>
			<button aria-label="next item">
				<Icon icon="arrow-right" />
			</button>
		</div>
	</div>
</div>

<style lang="scss">
	.container {
		padding-block: 122px 268px;
		position: relative;
	}

	.bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: var(--bg-light-mud);

		opacity: 0.7;
		background: url('/bg-texture.png'),
			var(--bg-light-mud) -267.603px -209.293px / 241.777% 341.607% no-repeat;
		z-index: -1;
	}

	h2 {
		text-transform: uppercase;
		font-size: 2rem;
		font-weight: 800;
		text-align: center;
		color: var(--blue-dark);
	}

	.carousel {
		display: flex;
		align-items: center;
		gap: 24px;
		margin-top: 108px;

		img {
			object-fit: contain;
		}

		button {
			line-height: 0;
			border: none;
			background: transparent;
			cursor: pointer;
			padding: 8px;

			display: flex;
			align-items: center;
			justify-content: center;
			transition: all 0.2s ease-in-out;
			border-radius: 4px;

			&:hover {
				background: var(--blue-light);
			}

			&:disabled {
				opacity: 0.5;
				cursor: not-allowed;
			}

			svg {
				width: 24px;
				height: 24px;
				fill: var(--blue-dark);
			}
		}
	}
</style>
