---
import Icon from '../icon.astro'
---

<div class="container">
  <div class="wrapper">
    <h2>our partners</h2>
    <div class="carousel">
      <button aria-label="previous item">
        <Icon icon="arrow-left" />
      </button>
      <img src="/partners.png" alt="partners" width={1203} height={183} />
      <button aria-label="next item">
        <Icon icon="arrow-right" />
      </button>
    </div>
  </div>
</div>

<style lang="scss">
  .container {
    background: rgba(237, 247, 237, 1);
    padding: 112px 0;
  }

  h2 {
    text-transform: uppercase;
    font-size: 2rem;
    font-weight: 800;
    text-align: center;
    color: rgba(0, 83, 96, 1);
  }

  .carousel {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-top: 42px;

    img {
      object-fit: contain;
    }

    button {
      line-height: 0;
      border: none;
      background: rgba(237, 247, 237, 1);
      cursor: pointer;
      padding: 8px;

      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease-in-out;
      border-radius: 4px;

      &:hover {
        background: rgb(177, 201, 177);
      }

      &:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      svg {
        width: 24px;
        height: 24px;
        fill: rgba(0, 83, 96, 1);
      }
    }
  }
</style>
